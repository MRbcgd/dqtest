<head>
  <meta charset="UTF-8">
  <title>Server Monitoring</title>


  <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
  <link rel="stylesheet" href="stylesheets/style.css">
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script src='/socket.io/socket.io.js'></script>

  <script type="text/javascript">
      google.charts.load('current', {'callback': init,'packages':['annotationchart']});
      google.charts.setOnLoadCallback(drawChart);

      function init () {
        var socket = io.connect();

        // socket.emit('join','stat_prcs');
        socket.emit('clientQuery','agenttcp');
        socket.on('serverSent', function (message) {
          // alert(JSON.stringify(message));
          // var processData = processData(message);
          drawChart(message);
        });
      }

      function drawChart(message) {
        var eth,rcv,snd,eth_v,v_rcv,v_snd;
        var result = [];
        var arr = [];

        for (var i = 0; i < message.length; i++) {
          var time = utcToKst(message[i].idate);
          
	  //eth = message[i].eth;
          rcv = message[i].rcv;
          snd = message[i].snd;
          // eth_v = message[i].eth_v;
          v_rcv = message[i].v_rcv;
          v_snd = message[i].v_snd;

          arr=[time, rcv, undefined, undefined,
                                  snd, undefined, undefined,
                                  v_rcv, undefined, undefined,
                                  v_snd, undefined, undefined];
          result.push(arr);
        }

        var data = new google.visualization.DataTable();
        data.addColumn('date', 'Date');
        data.addColumn('number', 'enp2s0 Rcv');
        data.addColumn('string', 'Kepler title');
        data.addColumn('string', 'Kepler text');
        data.addColumn('number', 'enp2s0 Snd');
        data.addColumn('string', 'Gliese title');
        data.addColumn('string', 'Gliese text');
        data.addColumn('number', 'virbr0-nic Rcv');
        data.addColumn('string', 'Gliese title');
        data.addColumn('string', 'Gliese text');
        data.addColumn('number', 'virbr0-nic snd');
        data.addColumn('string', 'Gliese title');
        data.addColumn('string', 'Gliese text');
        data.addRows(result);

        var chart = new google.visualization.AnnotationChart(document.getElementById('chart_div'));

        var options = {
          displayAnnotations: true
        };

        chart.draw(data, options);
      }
  </script>
</head>


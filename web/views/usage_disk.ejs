<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Server Monitoring</title>


  <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
  <link rel="stylesheet" href="stylesheets/style.css">
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script src='/socket.io/socket.io.js'></script>
  <script type="text/javascript">

    google.charts.load('current', {'callback': init,'packages':['annotationchart']});
    google.charts.setOnLoadCallback(drawChart);

    function init () {
      var socket = io.connect();

      // socket.emit('join','stat_prcs');
      socket.emit('clientQuery','agentdisk');
      socket.on('serverSent', function (message) {
        // alert(JSON.stringify(message));
        // var processData = processData(message);
        drawChart(message);
      });
    }
    function drawChart(message) {
      var idate,year,month,date,hour,minute,us;
      var result = [];
      var arr = [];

      for (var i = 0; i < message.length; i++) {
        idate = message[i].idate;
        year = idate.substr(0,4);
        month = (Number(idate.substr(5,2)) - 1).toString();//0~11
        date = idate.substr(8,2);
        hour = idate.substr(11,2);
        minute = idate.substr(14,2);
        us=message[i].us;

        arr = [new Date(year, month, date, hour, minute), us,undefined,undefined];
        result.push(arr);
      }

      var data = new google.visualization.DataTable();
      data.addColumn('date', 'Date');
      data.addColumn('number', 'Disk Usage');
      data.addColumn('string', 'Kepler title');
      data.addColumn('string', 'Kepler text');

      data.addRows(result);

      var chart = new google.visualization.AnnotationChart(document.getElementById('chart_div'));

      var options = {
        displayAnnotations: true
      };

      chart.draw(data, options);
    }
  </script>
</head>


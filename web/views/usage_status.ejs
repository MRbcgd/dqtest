    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <a href="#" class="btn btn-primary" id="menu-toggle">Menu</a>
          <!-- top  -->
          <% include ./top.ejs %>
          <p>Status</p>
          <!--  -->
        </div>
        <!-- middle -->

        <!--  -->
      </div>
      <div id="top_x_div" style="width: 800px; height: 450px;"></div>
      <!-- bottom -->
      <!--  -->
    </div>
  </div>

</div>
